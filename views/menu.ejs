<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NueApi</title>
    <link rel="icon" type="image/png" href="https://telegra.ph/file/e07e0fddc2a2967bd08d6.jpg"/>
    <meta name="description" content="Rest apis WhatsApp bot, Telegram bot, and Discord bot, free, has AI download IG feature and others">
    <meta name="tag" content="free api, nue-api, rest-api, azzapi">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f4f4f4;
            color: #333;
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            background-color: #3498db;
            color: #fff;
            width: 250px;
            padding: 20px;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
        }

        .sidebar h2 {
            font-size: 24px;
            margin-bottom: 30px;
            text-align: center;
        }

        .sidebar .search-bar-icon {
            position: relative;
            margin-bottom: 20px;
        }

        .sidebar .search-bar-icon input[type="text"] {
            width: 100%;
            padding: 10px 10px 10px 30px; 
            border: 1px solid #ddd;
            border-radius: 20px;
            font-size: 14px;
            color: #333;
        }

        .sidebar .search-bar-icon i {
            position: absolute;
            top: 50%;
            left: 10px; 
            transform: translateY(-50%);
            color: #888;
        }


        .content {
            flex-grow: 1;
            margin-left: 250px;
            padding: 30px;
        }

        header {
            text-align: center;
            margin-bottom: 30px;
        }

        header h1 {
            color: #3498db;
            font-size: 36px;
            margin-bottom: 10px;
        }

        header p {
            font-size: 18px;
            color: #666;
        }

        .menu-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            grid-gap: 30px;
        }

        .menu-card {
            background-color: #fff;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            text-decoration: none;
            color: inherit;
        }

        .menu-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .menu-card h2 {
            color: #3498db;
            font-size: 20px;
            margin-bottom: 10px;
        }

        .menu-card p {
            font-size: 14px;
            color: #666;
            margin-bottom: 20px;
        }

        .menu-card input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            margin-bottom: 15px;
        }

        .menu-card button {
            background-color: #2ecc71;
            color: #fff;
            border: none;
            padding: 12px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.2s ease;
            width: 100%;
        }

        .menu-card button:hover {
            background-color: #27ae60;
        }

        .home-button {
            position: fixed;
            top: 20px;
            left: 20px;
            background: transparent;
            border: none;
            cursor: pointer;
            z-index: 10; 
        }

        .home-button img {
            width: 40px;
            height: 40px;
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        footer p {
            font-size: 12px;
        }

        .no-results {
            text-align: center;
            font-size: 16px;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <h2>NueApi</h2>
        <div class="search-bar-icon">
            <input type="text" id="search-bar" placeholder="Cari API...">
            <i class="fas fa-search"></i>
        </div>
    </div>

    <div class="content">
        <a href="/dashboard" class="home-button">
            <img src="https://static.vecteezy.com/system/resources/previews/024/029/940/original/home-icon-clipart-transparent-background-free-png.png" alt="Home">
        </a>
        <header>
            <h1>Selamat Datang di NueApi</h1>
            <p>Jelajahi API gratis kami untuk proyek Anda</p>
        </header>
        <main>
            <div class="menu-grid" id="menu-container">

            </div>
        </main>
    </div>
    <footer>
        <p>Â© 2023 NueApi. All rights reserved.</p>
    </footer>
    <script>
        const menuItems = [
            {
                title: 'AI Logic',
                description: 'Buat AI Anda sendiri dengan model Gemma2 dengan sesi chat',
                inputPlaceholder: 'Siapa kamu?',
                endpoint: '/api/lgpt?user=Gapur&systemPrompt=anda adalah NueAI asisten cerdas yang dapat membantu apa saja berbasis teks, anda masih dalam tahap pengembangan dan pengembangan ini di pimpin oleh NueApi&text=',
                inputId: 'alicia-text'
            },
            {
                title: 'Anime Reaction',
                description: 'Dapatkan reaksi anime',
                endpoint: '/api/anime-reaction',
                isButtonOnly: true
            },
            {
                title: 'Anime Schedule',
                description: 'Jadwal anime berdasarkan hari',
                inputPlaceholder: 'Masukkan hari',
                endpoint: '/api/anime-jadwal?hari=',
                inputId: 'anime-day'
            },
            {
                title: 'Calendar Events',
                description: 'Lihat daftar acara kalender',
                endpoint: '/api/acara',
                isButtonOnly: true
            },
            {
                title: 'ChatGPT',
                description: 'Model GPT-3',
                inputPlaceholder: 'Masukkan perintah',
                endpoint: '/api/gpt?model=gpt-3.5-turbo&prompt=',
                inputId: 'chatgpt-prompt'
            },
            {
                title: 'Date Now',
                description: 'Waktu, tanggal, dan acara mendatang',
                endpoint: '/api/date?zone=Asia/Jakarta',
                isButtonOnly: true
            },
            {
                title: 'FB & IG Downloader',
                description: 'Download video/foto dari Instagram dan Facebook',
                inputPlaceholder: 'Masukkan URL Instagram/Facebook',
                endpoint: '/api/snapsave?url=',
                inputId: 'instagram-url'
            },
            {
                title: 'Gemini (Scraped)',
                description: 'Gemini hasil scraping dari gemini.google.com (tidak resmi)',
                inputPlaceholder: 'Masukkan perintah',
                endpoint: '/api/bard?text=',
                inputId: 'gemini-text'
            },
            {
                title: 'Gemini Model',
                description: 'Model Gemini Flash dari Google AI',
                inputPlaceholder: 'Masukkan perintah',
                endpoint: '/api/gemini?prompt=',
                inputId: 'gemini-model-prompt'
            },
            {
                title: 'Google Search',
                description: 'Cari di Google',
                inputPlaceholder: 'Masukkan kata kunci',
                endpoint: '/api/google?limit=3&query=',
                inputId: 'google-query'
            },
            {
                title: 'Image Search',
                description: 'Cari gambar di internet',
                inputPlaceholder: 'Masukkan kata kunci',
                endpoint: '/api/image?query=',
                inputId: 'image-query'
            },
            {
                title: 'Info Gempa (BMKG)',
                description: 'Informasi gempa bumi terbaru dari BMKG',
                endpoint: '/api/gempa',
                isButtonOnly: true
            },
            {
                title: 'NueAI (with Sessions)',
                description: 'Berinteraksi dengan NueAI (Model Gemma2 dengan sesi chat)',
                inputPlaceholder: 'Masukkan perintah',
                endpoint: '/api/sgpt?user=yanto&text=',
                inputId: 'sgpt-text'
            },
            {
                title: 'Stable Diffusion',
                description: 'AI yang dapat menghasilkan gambar dari teks',
                endpoint: 'https://tattered-classy-comic.glitch.me/sdlist',
                isButtonOnly: true
            },
            {
                title: 'Stable Diffusion XL',
                description: 'AI yang dapat menghasilkan gambar dari teks dengan kualitas lebih tinggi',
                endpoint: 'https://tattered-classy-comic.glitch.me/sdxllist',
                isButtonOnly: true
            },
            {
                title: 'Text To Speech',
                description: 'Ubah teks menjadi audio',
                inputPlaceholder: 'Masukkan teks',
                endpoint: '/api/tts?lang=id&text=',
                inputId: 'tts-text'
            },
            {
                title: 'TikTok Downloader',
                description: 'Download video, foto, dan musik dari TikTok',
                inputPlaceholder: 'Masukkan URL TikTok',
                endpoint: '/api/tt-dl?url=',
                inputId: 'tiktok-url'
            },
            {
                title: 'Upscale Image',
                description: 'Upscale gambar dari URL',
                inputPlaceholder: 'Masukkan URL gambar',
                endpoint: '/api/upscale?url=',
                inputId: 'upscale-url'
            },
            {
                title: 'YouTube Downloader',
                description: 'Download video/audio dari YouTube',
                inputPlaceholder: 'Masukkan URL YouTube',
                endpoint: '/api/ytdl?url=',
                inputId: 'ytdl-url'
            },
            {
                title: 'YouTube Player',
                description: 'Cari dan putar video/audio YouTube',
                inputPlaceholder: 'Masukkan kata kunci YouTube',
                endpoint: '/api/play?query=',
                inputId: 'youtube-query'
            },
            {
                title: 'YouTube Search',
                description: 'Cari video di YouTube',
                inputPlaceholder: 'Masukkan kata kunci',
                endpoint: '/api/yt-search?query=',
                inputId: 'yt-search-query'
            }
        ];

        const menuContainer = document.getElementById('menu-container');
        const searchBar = document.getElementById('search-bar');

        function renderMenuItems(searchTerm = '') {
            menuContainer.innerHTML = ''; 
            const filteredMenuItems = menuItems.filter(item => {
                return item.title.toLowerCase().includes(searchTerm.toLowerCase()) 
                       || item.description.toLowerCase().includes(searchTerm.toLowerCase());
            });

            if (filteredMenuItems.length === 0) {
                menuContainer.innerHTML = '<p class="no-results">Tidak ditemukan API.</p>';
                return;
            }

            filteredMenuItems.forEach(item => {
                const card = document.createElement('a');
                card.classList.add('menu-card');


                if (item.isButtonOnly) {
                    card.href = item.endpoint; 
                    card.innerHTML = `
                        <h2>${item.title}</h2>
                        <p>${item.description}</p>
                        <button>Coba Sekarang</button> 
                    `;
                } else {
                    card.href = '#'; 
                    card.innerHTML = `
                        <h2>${item.title}</h2>
                        <p>${item.description}</p>
                        <input type="text" id="${item.inputId}" placeholder="${item.inputPlaceholder}" required>
                        <button onclick="tryNow('${item.endpoint}', '${item.inputId}')" disabled>Coba Sekarang</button>
                    `;
                }

                menuContainer.appendChild(card);
            });


            attachInputListeners();
        }


        function attachInputListeners() {
            const inputFields = document.querySelectorAll('.menu-card input[type="text"]');
            inputFields.forEach(input => {
                input.addEventListener('input', () => {
                    const button = input.nextElementSibling;
                    button.disabled = !input.value;
                });
            });
        }

        function tryNow(endpoint, inputId) {
            const inputValue = document.getElementById(inputId).value;
            if (inputValue) {
                window.location.href = `${endpoint}${encodeURIComponent(inputValue)}`; 
            } else {
                alert('Silahkan isi kolom input.'); 
            }
        }

        searchBar.addEventListener('input', () => {
            const searchTerm = searchBar.value;
            renderMenuItems(searchTerm); 
        });


        renderMenuItems(); 
    </script>
</body>
</html>