<script>
    const images = [
        '/api/anime-reaction?category=sad',
        '/api/anime-reaction?category=sad&tipe=1',
        '/api/anime-reaction?category=sad&tipe=2',
    '/api/anime-reaction?category=sad&tipe=3',
        '/api/anime-reaction?category=sad&tipe=4',
        '/api/anime-reaction?category=sad&tipe=5'
    ];
    let currentIndex = 0;

    function updateBanner() {
        document.querySelector('.banner').style.background = `url(${images[currentIndex]}) no-repeat center center/cover`;
    }

    function nextImage() {
        currentIndex = (currentIndex + 1) % images.length;
        updateBanner();
    }

    function prevImage() {
        currentIndex = (currentIndex - 1 + images.length) % images.length;
        updateBanner();
    }

    function autoChangeImage() {
        nextImage();
        setTimeout(autoChangeImage, 10000);
    }

    document.addEventListener('DOMContentLoaded', (event) => {
        if (localStorage.getItem('theme') === 'dark') {
            document.body.classList.add('dark-mode');
        }
        updateBanner();
        setTimeout(autoChangeImage, 10000);
    });

    function toggleTheme() {
        document.body.classList.toggle('dark-mode');
        localStorage.setItem('theme', document.body.classList.contains('dark-mode') ? 'dark' : 'light');
    }
</script>
